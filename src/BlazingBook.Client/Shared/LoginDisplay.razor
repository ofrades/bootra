<div class="user-info">
    <AuthorizeView>
        <Authorizing>
            <text>...</text>
        </Authorizing>
        <Authorized>
            <Button Color="Color.Danger">
                <span class="iconify" data-icon="ant-design:user-outlined" data-inline="true"></span>
                <a href="user/signout">
                    <span class="username">@context.User.Identity.Name</span>
                    Sign out
                </a>
            </Button>
        </Authorized>
        <NotAuthorized>
            <Button Color="Color.Success">
                <a href="user/signin">
                <span class="iconify" data-icon="ant-design:login-outlined" data-inline="true"></span>
                Sign in
                </a>
            </Button>
        </NotAuthorized>
    </AuthorizeView>
</div>

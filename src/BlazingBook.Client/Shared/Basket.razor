@inject OrderState OrderState
@implements IDisposable

<Button Color="Color.Danger">
    <a href="checkout">
        <span class="iconify" data-icon="ant-design:shopping-cart-outlined" data-inline="true"></span>
        <Badge Color="Color.Primary" IsPill="true">@basketCount</Badge>
    </a>
</Button>

@code{
    int basketCount => OrderState.Order.Books.Count();
    protected override void OnParametersSet() {
        OrderState.OnChange += StateHasChanged;
    }
    public void Dispose() {
        OrderState.OnChange -= StateHasChanged;
    }
}
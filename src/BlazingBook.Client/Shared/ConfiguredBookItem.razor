<div class="cart-item">
    <a @onclick="OnRemoved" class="delete-item"><Button><span class="iconify" data-icon="ant-design:close-outlined" data-inline="false"></span></Button></a>
    <div class="title">@(BookCustom.Size)" @BookCustom.BookBase.Title</div>
    <ul>
        @foreach (var item in BookCustom.Extras)
        {
            <li>+ @item.Extra.Name</li>
        }
    </ul>
    <div class="item-price">
        @BookCustom.GetFormattedTotalPrice()
    </div>
</div>

@code {
    [Parameter] public BookCustom BookCustom { get; set; }
    [Parameter] public EventCallback OnRemoved { get; set; }
}